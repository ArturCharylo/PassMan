{
  "manifest_version": 3,
  "name": "Cryptono",
  "version": "1.0",
  "description": "Store and autofill your passwords securely.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.js",
    "default_title": "Cryptono"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
  "16": "icons/16.png",
  "48": "icons/48.png",
  "128": "icons/128.png"
}
}
