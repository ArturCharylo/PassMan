{
  "manifest_version": 3,
  "name": "PassMan",
  "version": "1.0",
  "description": "Store and autofill your passwords securely.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PassMan"
  }
}